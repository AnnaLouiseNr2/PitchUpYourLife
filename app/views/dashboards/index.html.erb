<main class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-extrabold text-gray-900" data-id="dashboard-title">
          Welcome back,
          <span data-id="dashboard-user-name"><%= current_user.try(:name).presence || current_user.try(:email)&.split('@')&.first&.capitalize %></span>
        </h1>
        <p class="text-sm text-gray-500 mt-2" data-id="dashboard-subtitle">
          Here's a snapshot of your recent activity and pitches.
        </p>
      </div>

      <div class="flex items-center space-x-3">
        <a href="/applications/new" class="inline-flex items-center px-4 py-2 rounded-md bg-indigo-600 text-white text-sm font-medium hover:bg-indigo-700" data-id="dashboard-new-application">
          + New application
        </a>

        <%= link_to edit_user_registration_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-white text-sm font-medium border border-gray-200 hover:shadow-sm", data: { id: "dashboard-account-settings" } do %>
          Account
        <% end %>
      </div>
    </div>

    <div class="flex justify-between space-x-4 mb-10" data-id="dashboard-stats">
      <div class="flex-1 bg-white rounded-lg shadow p-5 text-center flex items-center justify-center space-x-3" data-id="dashboard-stat-started">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
        </svg>
        <div>
          <div class="text-sm font-medium text-gray-500">Started</div>
          <div class="mt-1 text-2xl font-extrabold text-gray-900" data-id="dashboard-stat-started-value">12</div>
        </div>
      </div>

      <div class="flex-1 bg-white rounded-lg shadow p-5 text-center flex items-center justify-center space-x-3" data-id="dashboard-stat-finalized">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <div class="text-sm font-medium text-gray-500">Finalized</div>
          <div class="mt-1 text-2xl font-extrabold text-gray-900" data-id="dashboard-stat-finalized-value">8</div>
        </div>
      </div>

      <div class="flex-1 bg-white rounded-lg shadow p-5 text-center flex items-center justify-center space-x-3" data-id="dashboard-stat-sent">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
        </svg>
        <div>
          <div class="text-sm font-medium text-gray-500">Sent</div>
          <div class="mt-1 text-2xl font-extrabold text-gray-900" data-id="dashboard-stat-sent-value">6</div>
        </div>
      </div>

      <div class="flex-1 bg-white rounded-lg shadow p-5 text-center flex items-center justify-center space-x-3" data-id="dashboard-stat-interviewing">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <div>
          <div class="text-sm font-medium text-gray-500">Interviewing</div>
          <div class="mt-1 text-2xl font-extrabold text-gray-900" data-id="dashboard-stat-interviewing-value">3</div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <section class="bg-white rounded-lg shadow p-6 mb-12" data-id="dashboard-recent-pitches-section">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900" data-id="dashboard-recent-title">Your recent pitches</h2>
          <%= link_to "/applications", class: "text-sm text-indigo-600 hover:underline", data: { id: "dashboard-view-all-pitches" } do %>
            View all
          <% end %>
        </div>

        <ul class="divide-y divide-gray-200" data-id="dashboard-pitches-list">
          <% if @recent_pitches.present? %>
            <% @recent_pitches.each do |pitch| %>
              <li class="py-4 flex items-center justify-between" data-id="dashboard-pitch-item-<%= pitch.id %>">
                <div class="flex-grow">
                  <h3 class="text-sm font-medium text-gray-900"><%= pitch.title.presence || "Untitled pitch" %></h3>
                  <p class="text-xs text-gray-500">Created: <%= pitch.created_at.strftime("%b %d, %Y") %></p>
                </div>
                <div class="flex items-center space-x-2">
                  <% if pitch.respond_to?(:application) && pitch.application.present? %>
                    <%= link_to application_path(pitch.application), class: "text-gray-400 hover:text-indigo-600", data: { id: "dashboard-pitch-view-#{pitch.id}" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                    <%= link_to edit_application_path(pitch.application), class: "text-gray-400 hover:text-indigo-600", data: { id: "dashboard-pitch-edit-#{pitch.id}" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zm-5.657 5.657l-2.828 2.828-1.54 1.54-.707-.707 1.54-1.54 2.828-2.828 1.54-1.54.707.707-1.54 1.54z" />
                        <path fill-rule="evenodd" d="M11.364 6.636l-5.064 5.064-1.42 1.42L3 12.064l5.064-5.064zM16.064 4.936l-1.42 1.42-5.064 5.064-1.42 1.42 1.42 1.42 5.064-5.064 1.42-1.42z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  <% end %>
                  <%= link_to "#", class: "text-gray-400 hover:text-red-600", data: { id: "dashboard-pitch-delete-#{pitch.id}", method: :delete, confirm: "Are you sure?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </li>
            <% end %>
          <% else %>
            <div class="py-4 text-center text-gray-500">No recent pitches to display.</div>
          <% end %>
        </ul>
      </section>

      <section class="bg-white rounded-lg shadow p-6 mb-12" data-id="dashboard-applications-section">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900" data-id="dashboard-applications-title">All Applications</h2>
        </div>

        <ul class="divide-y divide-gray-200" data-id="dashboard-applications-list">
          <% if @applications.present? %>
            <% @applications.each do |application| %>
              <li class="py-4 flex items-center justify-between" data-id="dashboard-application-item-<%= application.id %>">
                <div class="flex-grow">
                  <h3 class="text-sm font-medium text-gray-900">Application #<%= application.id %></h3>
                  <p class="text-xs text-gray-500">Created: <%= application.created_at.strftime("%b %d, %Y") %></p>
                </div>
                <div class="flex items-center space-x-2">
                  <%= link_to application_path(application), class: "text-gray-400 hover:text-indigo-600", data: { id: "dashboard-application-view-#{application.id}" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                      <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                  <%= link_to edit_application_path(application), class: "text-gray-400 hover:text-indigo-600", data: { id: "dashboard-application-edit-#{application.id}" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zm-5.657 5.657l-2.828 2.828-1.54 1.54-.707-.707 1.54-1.54 2.828-2.828 1.54-1.54.707.707-1.54 1.54z" />
                      <path fill-rule="evenodd" d="M11.364 6.636l-5.064 5.064-1.42 1.42L3 12.064l5.064-5.064zM16.064 4.936l-1.42 1.42-5.064 5.064-1.42 1.42 1.42 1.42 5.064-5.064 1.42-1.42z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                  <%= link_to "#", class: "text-gray-400 hover:text-red-600", data: { id: "dashboard-application-delete-#{application.id}", method: :delete, confirm: "Are you sure?" } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </li>
            <% end %>
          <% else %>
            <div class="py-4 text-center text-gray-500">No applications to display.</div>
          <% end %>
        </ul>
      </section>
    </div>
  </div>
</main>

<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="main-title">Personalize Your Application</h1>
        <h2 class="main-subtitle">
          Select options most suitable for the application to get fully personalized cover letter and video pitch
        </h2>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="main-content">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12" style="max-width: 1400px; margin: 0 auto;">
        <div class="form-wrapper">
          <%= form_with url: prompt_selection_application_path(@application),
                      method: :patch,
                      local: true,
                      html: { id: "traitForm", class: "personalization-form", data: { controller: "form-generator", action: "submit->form-generator#validateForm" } } do |f| %>

            <!-- Tone Selection -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="bi bi-palette"></i>
                </div>
                <div class="section-content">
                  <h3 class="section-title">Communication Tone</h3>
                  <p class="section-description">What tone do you want for your Cover Letter and Video Pitch?</p>
                </div>
              </div>
              <div class="selection-cards">
                <input type="hidden" name="trait_choice1" id="trait_choice1" required data-action="change->form-generator#updateButton" data-form-generator-target="input">

                <div class="card-option" data-value="Professional and formal">
                  <h4 class="card-title">Professional and formal</h4>
                  <p class="card-description">Structured, business-focused communication</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Friendly and approachable">
                  <h4 class="card-title">Friendly and approachable</h4>
                  <p class="card-description">Warm, personable, and conversational</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Confident and assertive">
                  <h4 class="card-title">Confident and assertive</h4>
                  <p class="card-description">Bold, decisive, and results-driven</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Enthusiastic and energetic">
                  <h4 class="card-title">Enthusiastic and energetic</h4>
                  <p class="card-description">Passionate, dynamic, and inspiring</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>
              </div>
            </div>

            <!-- Professional Strength -->
            <div class="form-section" data-controller="other-field" data-other-field-target="selectContainer">
              <div class="section-header">
                <div class="section-icon">
                  <i class="bi bi-award"></i>
                </div>
                <div class="section-content">
                  <h3 class="section-title">Professional Strength</h3>
                  <p class="section-description">Which primary professional strength do you want to highlight?</p>
                </div>
              </div>
              <div class="selection-cards">
                <input type="hidden" name="trait_choice2" id="trait_choice2" required data-action="change->form-generator#updateButton" data-form-generator-target="input">

                <div class="card-option" data-value="Technical expertise and problem-solving">
                  <h4 class="card-title">Technical expertise and problem-solving</h4>
                  <p class="card-description">Deep knowledge with analytical thinking</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Leadership and team management">
                  <h4 class="card-title">Leadership and team management</h4>
                  <p class="card-description">Guiding teams and driving results</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Communication and collaboration">
                  <h4 class="card-title">Communication and collaboration</h4>
                  <p class="card-description">Building relationships and partnerships</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Innovation and creative thinking">
                  <h4 class="card-title">Innovation and creative thinking</h4>
                  <p class="card-description">Developing new ideas and solutions</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Analytical and data-driven approach">
                  <h4 class="card-title">Analytical and data-driven approach</h4>
                  <p class="card-description">Making decisions based on insights</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>
              </div>
            </div>

            <!-- Experience Level -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="bi bi-graph-up"></i>
                </div>
                <div class="section-content">
                  <h3 class="section-title">Experience Level</h3>
                  <p class="section-description">How would you describe your experience level in this field?</p>
                </div>
              </div>
              <div class="selection-cards">
                <input type="hidden" name="trait_choice3" id="trait_choice3" required data-action="change->form-generator#updateButton" data-form-generator-target="input">

                <div class="card-option" data-value="Entry level (0–2 years)">
                  <h4 class="card-title">Entry level (0–2 years)</h4>
                  <p class="card-description">Starting your career journey</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Mid-level (3–5 years)">
                  <h4 class="card-title">Mid-level (3–5 years)</h4>
                  <p class="card-description">Growing expertise and responsibility</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Senior level (6–10 years)">
                  <h4 class="card-title">Senior level (6–10 years)</h4>
                  <p class="card-description">Seasoned professional with deep skills</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Expert level (10+ years)">
                  <h4 class="card-title">Expert level (10+ years)</h4>
                  <p class="card-description">Industry leader and subject matter expert</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>
              </div>
            </div>

            <!-- Career Motivation -->
            <div class="form-section" data-controller="other-field" data-other-field-target="selectContainer">
              <div class="section-header">
                <div class="section-icon">
                  <i class="bi bi-heart"></i>
                </div>
                <div class="section-content">
                  <h3 class="section-title">Career Motivation</h3>
                  <p class="section-description">What motivates you most in your career?</p>
                </div>
              </div>
              <div class="selection-cards">
                <input type="hidden" name="trait_choice4" id="trait_choice4" required data-action="change->form-generator#updateButton" data-form-generator-target="input">

                <div class="card-option" data-value="Professional growth and learning">
                  <h4 class="card-title">Professional growth and learning</h4>
                  <p class="card-description">Continuously developing skills and knowledge</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Making a meaningful impact">
                  <h4 class="card-title">Making a meaningful impact</h4>
                  <p class="card-description">Creating positive change and value</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Solving complex challenges">
                  <h4 class="card-title">Solving complex challenges</h4>
                  <p class="card-description">Tackling difficult problems and finding solutions</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Working with great teams">
                  <h4 class="card-title">Working with great teams</h4>
                  <p class="card-description">Collaborating with talented people</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>

                <div class="card-option" data-value="Building innovative solutions">
                  <h4 class="card-title">Building innovative solutions</h4>
                  <p class="card-description">Creating new products and approaches</p>
                  <div class="card-check"><i class="bi bi-check-circle-fill"></i></div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
              <div class="button-group">
                <%= link_to new_application_path, class: "btn-secondary" do %>
                  <i class="bi bi-arrow-left me-2"></i>
                  <span class="d-none d-sm-inline">Back</span>
                  <span class="d-sm-none">Back</span>
                <% end %>
                <%= submit_tag "Generate Cover Letter & Video Pitch",
                    id: "nextBtn",
                    class: "btn-primary disabled",
                    form: "traitForm",
                    data: { "form-generator-target" => "submitButton", "desktop-text" => "Generate Cover Letter & Video Pitch", "mobile-text" => "Generate" } %>
              </div>

          <% end %>

              <!-- Progress Bar -->
              <div class="progress-bar-wrapper">
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 50%;"></div>
                </div>
                <div class="progress-steps">
                  <div class="progress-step completed">
                    <div class="step-circle">
                      <i class="bi bi-check"></i>
                    </div>
                    <span class="step-label">Upload Files</span>
                  </div>
                  <div class="progress-step active">
                    <div class="step-circle">
                      <span>2</span>
                    </div>
                    <span class="step-label">Personalize</span>
                  </div>
                  <div class="progress-step">
                    <div class="step-circle">
                      <span>3</span>
                    </div>
                    <span class="step-label">Generate</span>
                  </div>
                  <div class="progress-step">
                    <div class="step-circle">
                      <span>4</span>
                    </div>
                    <span class="step-label">Record</span>
                  </div>
                </div>
              </div>

              <!-- Tips Banner -->
              <div class="tips-banner">
                <div class="tips-banner-header">
                  <i class="bi bi-lightbulb-fill"></i>
                  <h3>Tips for best results</h3>
                </div>
                <ul class="tips-list">
                  <li>Choose options that best reflect your professional style</li>
                  <li>Select experience level that matches the job requirements</li>
                  <li>Pick motivations that align with the company culture</li>
                </ul>
              </div>

              <div class="security-note">
                <i class="bi bi-shield-check"></i>
                <small>Your preferences are used only to personalize your application materials</small>
              </div>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>


<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="main-title">Application Dashboard</h1>
        <h2 class="main-subtitle">
          All your applications at a glance
        </h2>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="main-content">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12" style="max-width: 1400px; margin: 0 auto;">
        <div class="form-wrapper">
          <!-- User Profile Section -->
          <div class="form-section">
            <div class="section-header">
              <div class="section-icon">
                <i class="bi bi-person"></i>
              </div>
              <div class="section-content">
                <h3 class="section-title">Welcome Back!</h3>
                <p class="section-description">Manage your job applications and track your progress</p>
              </div>
            </div>

            <div class="profile-stats">
              <div class="stat-card">
                <h4 class="stat-label">Member Since</h4>
                <p class="stat-value"><%= current_user&.created_at&.strftime('%B %Y') || 'N/A' %></p>
              </div>
              <div class="stat-card">
                <h4 class="stat-label">Total Applications</h4>
                <p class="stat-value"><%= @applications&.count || 0 %></p>
              </div>
              <div class="stat-card">
                <h4 class="stat-label">This Week</h4>
                <p class="stat-value"><%= @applications&.select { |app| app.created_at >= 1.week.ago }&.count || 0 %></p>
              </div>
              <div class="stat-card">
                <h4 class="stat-label">Account Status</h4>
                <p class="stat-value">Active</p>
              </div>
            </div>
          </div>

          <!-- Quick Actions Section -->
          <div class="form-section">
            <div class="section-header">
              <div class="section-icon">
                <i class="bi bi-lightning"></i>
              </div>
              <div class="section-content">
                <h3 class="section-title">Quick Actions</h3>
                <p class="section-description">Start new applications or access tools</p>
              </div>
            </div>

            <div class="actions-grid">
              <%= link_to new_application_path, class: "action-card primary" do %>
                <div class="action-icon">
                  <i class="bi bi-plus-lg"></i>
                </div>
                <h4 class="action-title">New Application</h4>
                <p class="action-description">Start a new job application</p>
              <% end %>

              <div class="action-card disabled">
                <div class="action-icon">
                  <i class="bi bi-graph-up"></i>
                </div>
                <h4 class="action-title">Application Insights</h4>
                <p class="action-description">View application analytics</p>
                <span class="badge">Coming Soon</span>
              </div>

              <div class="action-card disabled">
                <div class="action-icon">
                  <i class="bi bi-file-earmark-text"></i>
                </div>
                <h4 class="action-title">CV Templates</h4>
                <p class="action-description">Pre-built CV templates</p>
                <span class="badge">Coming Soon</span>
              </div>
            </div>
          </div>

          <!-- Applications List Section -->
          <div class="form-section">
            <div class="section-header">
              <div class="section-icon">
                <i class="bi bi-list-task"></i>
              </div>
              <div class="section-content">
                <h3 class="section-title">Your Applications</h3>
                <p class="section-description">Track and manage all your job applications</p>
              </div>
            </div>

            <div class="applications-container">
              <% if @applications&.any? %>
                <div class="applications-grid-wrapper">
                  <div class="applications-grid">
                    <% @applications.reverse.each do |application| %>
                    <div class="application-tile">
                      <div class="application-tile-header">
                        <div class="company-avatar">
                          <%= application.name&.first&.upcase || '?' %>
                        </div>
                        <div class="application-status">
                          <span class="status-indicator active"></span>
                          <span class="status-text">Active</span>
                        </div>
                      </div>

                      <div class="application-tile-content">
                        <h4 class="tile-company">
                          <%= link_to application.name, application_path(application), class: "company-link" %>
                        </h4>
                        <p class="tile-role"><%= application.title %></p>
                        <div class="tile-meta">
                          <div class="meta-item">
                            <i class="bi bi-calendar3"></i>
                            <span><%= application.created_at.strftime('%b %d, %Y') %></span>
                          </div>
                          <% if application.updated_at != application.created_at %>
                            <div class="meta-item">
                              <i class="bi bi-arrow-clockwise"></i>
                              <span><%= time_ago_in_words(application.updated_at) %> ago</span>
                            </div>
                          <% end %>
                        </div>
                      </div>

                      <div class="application-tile-progress">
                        <div class="progress-bar">
                          <div class="progress-fill" style="width: <%= [25, 50, 75, 100].sample %>%"></div>
                        </div>
                        <span class="progress-text">Step <%= [1, 2, 3, 4].sample %> of 4</span>
                      </div>

                      <div class="application-tile-actions">
                        <%= link_to application_path(application), class: "tile-btn primary" do %>
                          <i class="bi bi-arrow-right"></i>
                          <span>Continue</span>
                        <% end %>

                        <%= button_to application_path(application), method: :delete,
                            data: { confirm: 'Are you sure you want to delete this application?' },
                            class: "tile-btn danger" do %>
                          <i class="bi bi-trash"></i>
                          <span>Delete</span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                  </div>
                </div>
              <% else %>
                <div class="empty-state">
                  <i class="bi bi-inbox"></i>
                  <h4>No applications yet</h4>
                  <p>Start your job search journey by creating your first application</p>
                  <%= link_to new_application_path, class: "btn-primary" do %>
                    <i class="bi bi-plus-circle me-2"></i>Create Your First Application
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="action-buttons">
            <div class="button-group">
              <%= link_to new_application_path, class: "btn-primary" do %>
                <i class="bi bi-plus-circle me-2"></i>
                <span class="d-none d-sm-inline">Create New Application</span>
                <span class="d-sm-none">New Application</span>
              <% end %>

              <%= link_to edit_user_registration_path, class: "btn-secondary" do %>
                <span class="d-none d-sm-inline">Edit Profile</span>
                <span class="d-sm-none">Profile</span>
                <i class="bi bi-person-gear ms-2"></i>
              <% end %>
            </div>

            <!-- Tips Banner -->
            <div class="tips-banner">
              <div class="tips-banner-header">
                <i class="bi bi-lightbulb-fill"></i>
                <h3>Dashboard Tips</h3>
              </div>
              <ul class="tips-list">
                <li>Create targeted applications for each job opportunity</li>
                <li>Track your application progress and follow up timing</li>
                <li>Keep your CV updated with latest experiences</li>
              </ul>
            </div>

            <div class="security-note">
              <i class="bi bi-shield-check"></i>
              <small>Your data is stored securely and remains private</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


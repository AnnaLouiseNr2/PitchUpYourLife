    font-size: 1.5rem;
    margin-bottom: 0.1rem;
  }

  .main-subtitle {
    font-size: 0.875rem;
  }

  .tips-banner {
    padding: 1rem;
    margin: 1rem 0;
  }

  .tips-list {
    columns: 1;
    font-size: 0.85rem;
  }

  .form-section {
    padding: 1rem;
  }

  .action-card {
    min-height: 120px;
    padding: 1rem;
  }
}
</style>
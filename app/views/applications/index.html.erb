<%# here %>
    <div class="row g-4">
        <div class="col-lg-3">
            <div class="d-flex flex-column gap-4">
                <div class="card" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem;">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="profile-icon" style="width: 48px; height: 48px; background-color: #eff6ff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 1rem;">
                                <i class="bi bi-person-fill fs-3" style="color: #1e40af;"></i>
                            </div>
                            <div>
                                <h5 class="fw-bold mb-0" style="color: #111827;"><%= current_user&.email&.split('@')&.first&.capitalize || 'User' %></h5>
                            </div>
                        </div>
                        <div class="text-sm text-secondary">
                            <p class="mb-1">Member Since: <%= current_user&.created_at&.strftime('%B %Y') || 'N/A' %></p>
                            <p class="mb-1">Applications: <%= @applications&.count || 0 %></p>
                            <p class="mb-1">Status: Active</p>
                        </div>
                        <div class="mt-3">
                            <%= link_to "Edit Profile â†’", edit_user_registration_path, class: "text-primary text-decoration-none" %>
                        </div>
                    </div>
                </div>

                <div class="card" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem;">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3" style="color: #111827;">Application Stats</h5>
                        <div class="d-flex flex-column gap-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-secondary">Total Applications</span>
                                <span class="badge rounded-pill" style="background-color: #f3f4f6; color: #374151;"><%= @applications&.count || 0 %></span>
                            </div>
                            <%# <div class="d-flex justify-content-between align-items-center">
                                <span class="text-secondary">Completed</span>
                                <span class="badge rounded-pill" style="background-color: #d1fae5; color: #059669;"><%= @applications&.select { |app| app.finals&.any? }&.count || 0 %></span>
                            <%# </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-secondary">In Progress</span>
                                <span class="badge rounded-pill" style="background-color: #fef3c7; color: #d97706;"><%= @applications&.reject { |app| app.finals&.any? }&.count || 0 %></span>
                            <%# </div> %>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-secondary">This Week</span>
                                <span class="badge rounded-pill" style="background-color: #eff6ff; color: #1e40af;"><%= @applications&.select { |app| app.created_at >= 1.week.ago }&.count || 0 %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex flex-column gap-4">
                <!-- Quick Actions Card -->
                <div class="card" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem;">
                    <div class="card-body" >
                        <h5 class="fw-bold mb-3" style="color: #111827;">Quick Actions</h5>
                        <div class="row row-cols-1 row-cols-md-3 g-3">
                            <div class="col w-100">
                                <%= link_to new_application_path, class: "d-flex flex-column text-center p-4 text-decoration-none h-100", style: "border: 2px solid #e5e7eb; border-radius: 0.5rem; transition: all 0.2s; background-color: #f9fafb;" do %>
                                    <div style="width: 48px; height: 48px; background-color: #eff6ff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                                        <i class="bi bi-plus-lg fs-5" style="color: #1e40af;"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1" style="color: #111827;">New Application</h6>
                                    <small style="color: #6b7280;">Start a new job application</small>
                                <% end %>
                            </div>
                            <%# <div class="col">
                                <a href="/templates" class="d-flex flex-column text-center p-4 text-decoration-none h-100" style="border: 2px solid #e5e7eb; border-radius: 0.5rem; transition: all 0.2s; background-color: #f9fafb;">
                                    <div style="width: 48px; height: 48px; background-color: #d1fae5; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                                        <i class="bi bi-file-earmark-text-fill fs-5" style="color: #059669;"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1" style="color: #111827;">Templates</h6>
                                    <small style="color: #6b7280;">Browse cover letter templates</small>
                                </a>
                            </div> %>
                            <%# <div class="col">
                                <a href="/insights" class="d-flex flex-column text-center p-4 text-decoration-none h-100" style="border: 2px solid #e5e7eb; border-radius: 0.5rem; transition: all 0.2s; background-color: #f9fafb;">
                                    <div style="width: 48px; height: 48px; background-color: #fef3c7; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                                        <i class="bi bi-bar-chart-fill fs-5" style="color: #d97706;"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1" style="color: #111827;">Insights</h6>
                                    <small style="color: #6b7280;">View application analytics</small>
                                </a>
                            </div> %>
                        </div>
                    </div>
                </div>

                <!-- Applications List -->
                <div class="card" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 0.5rem;">
                    <div class="card-body">
                        <h5 class="fw-bold mb-4" style="color: #111827;">Your Applications</h5>
                        <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                            <% if @applications&.any? %>
                                <% @applications.reverse.each do |application| %>
                                    <div class="list-group-item d-flex justify-content-between align-items-center py-3 px-0" style="background-color: transparent; border: none; border-bottom: 1px solid #e5e7eb;">
                                        <div>

                                                <%= link_to application_path(application), class: "fw-bold text-decoration-none", style: "color: #111827; font-size: 1.1rem;" do %>
                                                    <%= application.name %>
                                                <% end %>
                                                <div class="d-flex gap-2 mt-2">
                                                    <span class="badge rounded-pill" style="background-color: #fef3c7; color: #d97706;">Role: </span>
                                                    <small style="color: #6b7280;"><%= application.title %></small>
                                                </div>
                                            <small class="d-block mt-1" style="color: #9ca3af;">Created: <%= application.created_at.strftime('%B %d, %Y') %></small>
                                        </div>
                                        <div class="d-flex gap-2">

                                                <%= link_to application_path(application), class: "btn btn-sm", style: "background-color: #1EDD88; color: #ffffff;" do %>
                                                    <i class="bi bi-pencil me-1"></i> View
                                                <% end %>

                                            <%= button_to application_path(application), method: :delete,
                                                data: { confirm: 'Are you sure you want to delete this application?' },
                                                class: "btn btn-sm",
                                                style: "background-color: #fee2e2; color: #dc2626; border: 1px solid #fecaca;" do %>
                                                <i class="bi bi-trash">Delete</i>
                                            <% end %>
                                        </div>
                                    </div>
                                <% end %>
                            <% else %>
                                <div class="text-center py-5">
                                    <i class="bi bi-inbox fs-1" style="color: #9ca3af;"></i>
                                    <p class="mt-3" style="color: #6b7280;">No applications yet</p>
                                    <%= link_to "Create your first application", new_application_path, class: "btn mt-2", style: "background-color: #1EDD88; color: #ffffff;" %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

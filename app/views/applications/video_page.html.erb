<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="main-title">Record Your Video Pitch</h1>
        <h2 class="main-subtitle">
          Use the teleprompter to record your personalized video pitch
        </h2>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="main-content">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12" style="max-width: 1400px; margin: 0 auto;">
        <div class="form-wrapper" data-controller="video" data-video-application-id-value="<%= params[:id] %>">
          <!-- Video Recording Section -->
          <div class="form-section">
            <div class="section-header">
              <div class="section-icon">
                <i class="bi bi-camera-video"></i>
              </div>
              <div class="section-content">
                <h3 class="section-title">Video Recording</h3>
                <p class="section-description">Record your video pitch with the teleprompter</p>
              </div>
            </div>

            <div class="video-recording-area">
              <div class="video-container">
                <video id="live"
                       data-video-target="display"
                       autoplay
                       muted
                       playsinline
                       class="video-preview">
                </video>

                <div data-video-target="teleprompter" class="teleprompter-overlay">
                  <div class="teleprompter-header">TELEPROMPTER</div>
                  <div class="teleprompter-content">
                    <%= simple_format(@application.video_message) %>
                  </div>
                </div>
              </div>

              <div class="recording-controls">
                <button type="button"
                        id="start"
                        data-video-target="recordButton"
                        class="btn-primary recording-btn">
                  <i class="bi bi-record-circle me-2"></i>
                  Start Recording
                </button>
                <button type="button"
                        id="stop"
                        class="btn-danger recording-btn">
                  <i class="bi bi-stop-circle me-2"></i>
                  Stop Recording
                </button>
              </div>
            </div>
          </div>

          <!-- Uploaded Video Section -->
          <div class="form-section">
            <div class="section-header">
              <div class="section-icon">
                <i class="bi bi-play-circle"></i>
              </div>
              <div class="section-content">
                <h3 class="section-title">Your Recorded Video</h3>
                <p class="section-description">Review and manage your video pitch</p>
              </div>
            </div>

            <div class="uploaded-video-area" data-video-target="uploaded">
              <% if @video&.file&.attached? %>
                <div class="video-player-container">
                  <video controls class="video-player">
                    <source src="<%= url_for(@video.file) %>" type="<%= @video.file.content_type %>">
                    Your browser does not support the video tag.
                  </video>
                </div>

                <div class="video-link-section">
                  <h6 class="link-label">Video Link</h6>
                  <div class="link-controls">
                    <% cloudinary_url = url_for(@video.file) %>
                    <input id="videoLink"
                           type="text"
                           readonly
                           value="<%= cloudinary_url %>"
                           class="link-input">
                    <button type="button"
                            class="btn-secondary link-btn"
                            onclick="navigator.clipboard.writeText(document.getElementById('videoLink').value)">
                      <i class="bi bi-clipboard me-1"></i>
                      Copy
                    </button>
                    <%= link_to cloudinary_url, target: "_blank", rel: "noopener", class: "btn-primary link-btn" do %>
                      <i class="bi bi-box-arrow-up-right me-1"></i>
                      Open
                    <% end %>
                  </div>
                </div>
              <% else %>
                <div class="no-video-state">
                  <div class="no-video-icon">
                    <i class="bi bi-camera-video"></i>
                  </div>
                  <h5 class="no-video-title">No video recorded yet</h5>
                  <p class="no-video-description">Use the recording controls above to capture your video pitch</p>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="action-buttons">
            <div class="button-group">
              <%= link_to overview_application_path(@application), class: "btn-secondary" do %>
                <i class="bi bi-arrow-left me-2"></i>
                <span class="d-none d-sm-inline">Back to Generate</span>
                <span class="d-sm-none">Back</span>
              <% end %>
              <%= link_to application_path(@application),
                  class: "btn-primary",
                  data: { video_target: "finishButton" } do %>
                <span class="d-none d-sm-inline">Finish Application</span>
                <span class="d-sm-none">Finish</span>
                <i class="bi bi-check-circle ms-2"></i>
              <% end %>
            </div>

            <!-- Progress Bar -->
            <div class="progress-bar-wrapper">
              <div class="progress-bar">
                <div class="progress-fill" style="width: 100%;"></div>
              </div>
              <div class="progress-steps">
                <div class="progress-step completed">
                  <div class="step-circle">
                    <i class="bi bi-check"></i>
                  </div>
                  <span class="step-label">Upload Files</span>
                </div>
                <div class="progress-step completed">
                  <div class="step-circle">
                    <i class="bi bi-check"></i>
                  </div>
                  <span class="step-label">Personalize</span>
                </div>
                <div class="progress-step completed">
                  <div class="step-circle">
                    <i class="bi bi-check"></i>
                  </div>
                  <span class="step-label">Generate</span>
                </div>
                <div class="progress-step active">
                  <div class="step-circle">
                    <span>4</span>
                  </div>
                  <span class="step-label">Record</span>
                </div>
              </div>
            </div>

            <!-- Tips Banner -->
            <div class="tips-banner">
              <div class="tips-banner-header">
                <i class="bi bi-lightbulb-fill"></i>
                <h3>Video recording tips</h3>
              </div>
              <ul class="tips-list">
                <li>Look directly at the camera for better connection</li>
                <li>Speak clearly and at a comfortable pace</li>
                <li>Use the teleprompter to stay on message</li>
                <li>Record in a quiet, well-lit environment</li>
              </ul>
            </div>

            <div class="security-note">
              <i class="bi bi-shield-check"></i>
              <small>Your video is stored securely and remains private</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


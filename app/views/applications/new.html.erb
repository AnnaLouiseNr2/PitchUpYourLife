<!-- Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="main-title">Create New Application</h1>
        <h2 class="main-subtitle">
          Upload your CV and job description to get started with AI-powered application assistance
        </h2>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<div class="main-content">
  <div class="container">
    <div class="row justify-content-center">
      <!-- Form Column -->
      <div class="col-12" style="max-width: 1400px; margin: 0 auto;">
        <!-- Form Wrapper -->
        <div class="form-wrapper">
          <%= simple_form_for @application, html: { class: 'application-form', multipart: true } do |f| %>

            <!-- CV Upload Section -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="bi bi-file-earmark-person"></i>
                </div>
                <div class="section-content">
                  <h3 class="section-title">Upload Your CV</h3>
                  <p class="section-description">Upload your resume or curriculum vitae</p>
                </div>
              </div>

              <div class="upload-area">
                <%= f.file_field :cv,
                    id: "cv-upload",
                    accept: '.pdf,.doc,.docx',
                    class: 'file-input',
                    style: 'display: none;' %>

                <label for="cv-upload" class="upload-zone">
                  <div class="upload-content">
                    <div class="upload-icon">
                      <i class="bi bi-cloud-upload"></i>
                    </div>
                    <div class="upload-text">
                      <h4 class="upload-title">
                        <span class="d-none d-sm-inline">Drag and drop your CV here or click to browse</span>
                        <span class="d-sm-none">Tap to upload your CV</span>
                      </h4>
                      <p class="upload-subtitle">
                        Supports PDF, DOC, DOCX files up to 10MB
                      </p>
                    </div>
                  </div>
                  <div class="upload-border"></div>
                </label>
              </div>
            </div>

            <!-- Job Description Section -->
            <div class="form-section">
              <div class="section-header">
                <div class="section-icon">
                  <i class="bi bi-file-earmark-text"></i>
                </div>
                <div class="section-content">
                  <h3 class="section-title">Job Description</h3>
                  <p class="section-description">Paste the complete job posting</p>
                </div>
              </div>

              <div class="textarea-wrapper">
                <%= f.text_area :job_d,
                    placeholder: "Paste the complete job description here...\n\nInclude:\n• Job title and company\n• Requirements and qualifications\n• Responsibilities and duties\n• Benefits and compensation (if mentioned)",
                    class: 'job-textarea',
                    rows: 10 %>
                <div class="textarea-footer">
                  <div class="character-info">
                    <i class="bi bi-info-circle"></i>
                    <small>The more detailed the job description, the better our AI can tailor your application</small>
                  </div>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
              <div class="button-group">
                <%= link_to applications_path, class: "btn-secondary" do %>
                  <i class="bi bi-arrow-left me-2"></i>
                  <span class="d-none d-sm-inline">Back to Applications</span>
                  <span class="d-sm-none">Back</span>
                <% end %>
                <%= f.submit "Continue to Personalization", class: "btn-primary", data: { "desktop-text" => "Continue to Personalization", "mobile-text" => "Continue" } %>
              </div>

              <!-- Progress Bar -->
              <div class="progress-bar-wrapper">
                <div class="progress-bar">
                  <div class="progress-fill" style="width: 25%;"></div>
                </div>
                <div class="progress-steps">
                  <div class="progress-step active">
                    <div class="step-circle">
                      <i class="bi bi-upload"></i>
                    </div>
                    <span class="step-label">Upload Files</span>
                  </div>
                  <div class="progress-step">
                    <div class="step-circle">
                      <span>2</span>
                    </div>
                    <span class="step-label">Personalize</span>
                  </div>
                  <div class="progress-step">
                    <div class="step-circle">
                      <span>3</span>
                    </div>
                    <span class="step-label">Generate</span>
                  </div>
                  <div class="progress-step">
                    <div class="step-circle">
                      <span>4</span>
                    </div>
                    <span class="step-label">Record</span>
                  </div>
                </div>
              </div>

              <!-- Tips Banner -->
              <div class="tips-banner">
                <div class="tips-banner-header">
                  <i class="bi bi-lightbulb-fill"></i>
                  <h3>Tips for best results</h3>
                </div>
                <ul class="tips-list">
                  <li>Ensure your CV is up-to-date with relevant experience</li>
                  <li>Include complete job description with requirements</li>
                  <li>Files should be clear and readable (PDF preferred)</li>
                </ul>
              </div>

              <div class="security-note">
                <i class="bi bi-shield-check"></i>
                <small>Your files are processed securely and never stored permanently</small>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

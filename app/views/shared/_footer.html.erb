      <div class="grid grid-cols-2 gap-6 md:col-span-2" data-id="footer-links">
        <div>
          <h4 class="text-sm font-medium text-gray-900 mb-3" data-id="footer-links-products-title">Product</h4>
          <ul class="space-y-2 text-sm text-gray-600">
            <li data-id="footer-link-features"><%= link_to "Features", "#features", class: "hover:underline" %></li>
            <li data-id="footer-link-templates"><%= link_to "Templates", "/templates", class: "hover:underline" %></li>

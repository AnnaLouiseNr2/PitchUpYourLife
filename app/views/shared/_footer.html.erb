          <ul class="space-y-2 text-sm text-gray-600">
            <li data-id="footer-link-about"><%= link_to "About", "/about", class: "hover:underline" %></li>
            <li data-id="footer-link-careers"><%= link_to "Careers", "/careers", class: "hover:underline" %></li>

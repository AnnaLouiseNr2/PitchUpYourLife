<main class="min-h-screen bg-white">
  <!-- HERO -->
  <section class="relative overflow-hidden bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 tracking-tight mb-6" data-id="hero-title">
        PitchUpYourLife<br>Perfect Pitches, Faster.
      </h1>

      <p class="max-w-3xl mx-auto text-lg md:text-xl text-gray-600 mb-8 whitespace-nowrap" data-id="hero-subtitle">
        AI-assisted cover letters, pitch scripts and company insights to help you apply with confidence.
      </p>

      <div class="flex items-center justify-center space-x-4" data-id="hero-ctas">
        <%= link_to new_user_registration_path, class: "inline-flex items-center px-6 py-3 rounded-md text-base font-semibold bg-indigo-600 text-white hover:bg-indigo-700", data: { id: "cta-signup" } do %>
          Get started — it’s free
        <% end %>

        <%= link_to new_user_session_path, class: "inline-flex items-center px-6 py-3 rounded-md text-base font-medium border border-gray-300 text-gray-700 hover:bg-gray-50", data: { id: "cta-login" } do %>
          Log in
        <% end %>
      </div>

      <div class="mt-10 flex items-center justify-center space-x-6" data-id="hero-social-proof">
        <div class="flex items-center space-x-3">
          <div class="text-3xl font-extrabold text-gray-900" data-id="hero-stat-apps">12k+</div>
          <div class="text-left">
            <div class="text-sm text-gray-500">Applications created</div>
          </div>
        </div>

        <div class="flex items-center space-x-3">
          <div class="text-3xl font-extrabold text-gray-900" data-id="hero-stat-success">4.7</div>
          <div class="text-left">
            <div class="text-sm text-gray-500">Average rating</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURES -->
  <section id="features" class="bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-extrabold text-gray-900" data-id="features-title">What PitchUpYourLife does for you</h2>
        <p class="mt-3 text-gray-600 max-w-2xl mx-auto" data-id="features-subtitle">
          From tailored company insights to interview scripts — create professional application assets in seconds.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8" data-id="features-grid">
        <div class="bg-white rounded-lg shadow p-6 text-center" data-id="feature-1">
          <div class="mx-auto mb-4 inline-flex items-center justify-center h-12 w-12 rounded-md bg-indigo-50">
            <!-- Icon: Upload -->
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M3 15v4a1 1 0 001 1h16a1 1 0 001-1v-4" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M7 10l5-5 5 5" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M12 5v12" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2" data-id="feature-1-title">Upload & Auto-generate</h3>
          <p class="text-gray-600 text-sm" data-id="feature-1-desc">
            Upload your job description or CV and get tailored cover letters, pitches and scripts instantly.
          </p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 text-center" data-id="feature-2">
          <div class="mx-auto mb-4 inline-flex items-center justify-center h-12 w-12 rounded-md bg-rose-50">
            <!-- Icon: Insights -->
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M3 3v18h18" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M7 13V7" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M11 17V4" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M15 11v6" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M19 9v8" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2" data-id="feature-2-title">Company Insights</h3>
          <p class="text-gray-600 text-sm" data-id="feature-2-desc">
            Research-backed bullet points and talking points so your application stands out.
          </p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 text-center" data-id="feature-3">
          <div class="mx-auto mb-4 inline-flex items-center justify-center h-12 w-12 rounded-md bg-emerald-50">
            <!-- Icon: Video script -->
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><rect x="2" y="6" width="12" height="12" rx="2" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2" data-id="feature-3-title">Video Pitch Scripts</h3>
          <p class="text-gray-600 text-sm" data-id="feature-3-desc">
            Short, persuasive scripts for video applications or interview intros.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- DYNAMIC / DATA-DRIVEN PREVIEW: recent pitches -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20" data-id="recent-pitches-section">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl font-extrabold text-gray-900" data-id="recent-pitches-title">Recent pitches</h2>
        <p class="text-sm text-gray-500" data-id="recent-pitches-subtitle">A quick preview of recently produced pitches from the community or your account.</p>
      </div>

      <div>
        <%= link_to "/applications/new", class: "inline-flex items-center px-4 py-2 rounded-md border border-gray-300 text-sm text-gray-700 hover:bg-gray-50", data: { id: "recent-pitches-new-application" } do %>
          Create new application
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6" data-id="recent-pitches-grid">
      <% if defined?(@recent_pitches) && @recent_pitches.present? %>
        <% @recent_pitches.each do |pitch| %>
          <div class="bg-white rounded-lg shadow p-5" data-id="recent-pitch-<%= pitch.id %>">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-semibold text-gray-900" data-id="recent-pitch-<%= pitch.id %>-title"><%= pitch.title.presence || "Untitled pitch" %></h3>
              <span class="text-xs text-gray-400" data-id="recent-pitch-<%= pitch.id %>-created"><%= pitch.created_at.strftime("%b %d, %Y") if pitch.created_at %></span>
            </div>

            <p class="text-sm text-gray-600 mb-4" data-id="recent-pitch-<%= pitch.id %>-excerpt"><%= truncate(pitch.content.to_s, length: 170) %></p>

            <div class="flex items-center justify-between">
              <div class="text-xs text-gray-500" data-id="recent-pitch-<%= pitch.id %>-author">
                <% if pitch.application && pitch.application.user %>
                  <%= pitch.application.user.email %>
                <% else %>
                  Community
                <% end %>
              </div>

              <div>
                <%= link_to application_path(pitch.application), class: "inline-flex items-center text-sm font-medium text-indigo-600 hover:underline", data: { id: "recent-pitch-#{pitch.id}-view" } do %>
                  View application
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <%# Fallback / placeholder cards if there are no @recent_pitches provided by the controller %>
        <% 3.times do |i| %>
          <div class="bg-white rounded-lg shadow p-5" data-id="recent-pitch-placeholder-<%= i %>">
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-lg font-semibold text-gray-900" data-id="recent-pitch-placeholder-<%= i %>-title">Example pitch title</h3>
              <span class="text-xs text-gray-400" data-id="recent-pitch-placeholder-<%= i %>-date">Aug 26, 2025</span>
            </div>

            <p class="text-sm text-gray-600 mb-4" data-id="recent-pitch-placeholder-<%= i %>-excerpt">
              This is a preview of what a generated pitch might look like. It includes a short summary to help you decide if it fits the job.
            </p>

            <div class="flex items-center justify-between">
              <div class="text-xs text-gray-500" data-id="recent-pitch-placeholder-<%= i %>-author">PitchUpYourLife</div>
              <div>
                <a href="#" class="inline-flex items-center text-sm font-medium text-indigo-600 hover:underline" data-id="recent-pitch-placeholder-<%= i %>-view">View application</a>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- PRICING CTA -->
  <section id="pricing" class="bg-indigo-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
      <h2 class="text-3xl font-extrabold text-white mb-4" data-id="pricing-cta-title">Ready to level up your applications?</h2>
      <p class="text-indigo-100 mb-8" data-id="pricing-cta-subtitle">Try a premium plan for advanced templates, priority generation and more.</p>

      <div class="flex items-center justify-center space-x-4" data-id="pricing-cta-buttons">
        <a href="#pricing" class="inline-flex items-center px-6 py-3 rounded-md bg-white text-indigo-700 font-semibold hover:bg-gray-100" data-id="pricing-cta-trial">Start a free trial</a>
        <a href="#pricing" class="inline-flex items-center px-6 py-3 rounded-md border border-white text-white hover:bg-indigo-50/10" data-id="pricing-cta-contact">Contact sales</a>
      </div>
    </div>
  </section>
</main>
